<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--自定义dialog背景全透明无边框 -->
    <style name="DLoadingProgressDialog" parent="android:style/Theme.Dialog">
        <!--背景颜色及和透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="def_remote_controller">
        <item name="rcv_text_color">@color/bleglasses_main_top_bg_color</item>
        <item name="rcv_shadow_color">#A9D9F5</item>
        <item name="rcv_stroke_color">#A9D9F5</item>
        <item name="rcv_text_size">18sp</item>
        <item name="rcv_stroke_width">1px</item>
        <item name="rcv_oval_degree">90</item>
    </style>


    <style name="AppTheme.Launcher" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/main_background_color</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme.Launcher.NoFullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/main_background_color</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme.Launcher.Show" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowFullscreen">true</item>
    </style>



    <style name="AppTheme.Activity" parent="Theme.AppCompat.NoActionBar">
    </style>

    <declare-styleable name="HorizontalScrollSelectedView">
        <!--可见数目-->
        <attr name="HorizontalselectedViewSeesize" format="integer"></attr>
        <!--被选择文字的大小和颜色-->
        <attr name="HorizontalselectedViewSelectedTextSize" format="dimension"></attr>
        <attr name="HorizontalselectedViewSelectedTextColor" format="color|reference"></attr>


        <!--未被被选择文字的大小和颜色-->
        <attr name="HorizontalselectedViewTextSize" format="dimension"></attr>
        <attr name="HorizontalselectedViewTextColor" format="color|reference"></attr>

    </declare-styleable>

    <!--柱状图-->
    <declare-styleable name="MyChartView">
        <attr name="leftColor" format="color"></attr>
        <attr name="leftColorBottom" format="color"></attr>
        <attr name="selectLeftColor" format="color"></attr>
        <attr name="rightColor" format="color"></attr>
        <attr name="rightColorBottom" format="color"></attr>
        <attr name="selectRightColor" format="color"></attr>
        <attr name="xyColor" format="color"></attr>
    </declare-styleable>

    <!--7天签到View-->
    <style name="def_sign_in_style">
        <item name="sign_in_bg_clor">@color/center_unsignin_inner_circle_color</item>
        <item name="unsign_in_bg_clor">@color/center_unsignin_inner_circle_color</item>
        <item name="sign_in_normal_hollow_circle">@color/center_unsignin_hollow_circle_color</item>
        <item name="sign_in_pb_clor">@color/center_signin_inner_circle_color</item>
        <item name="sign_in_check_clor">@color/center_signin_inner_circle_color</item>
        <item name="sign_in_text_clor">@color/top_signin_text_color</item>
        <item name="sign_in_text_size">12sp</item>
    </style>

    <style name="customebutton">
        <item name="normalbackground">@drawable/circle_shape</item>
        <item name="pressedbackground">@drawable/oval_circle_shape</item>
        <item name="normaltextcolor">@color/login_phone_click</item>
        <item name="pressedtextcolor">@color/main_background_color</item>
        <item name="unclickablebackground">@drawable/unable_oval_circle_shape</item>
        <item name="unclickabletextcolor">@color/main_body_text_color</item>
    </style>

    <style name="customerectbutton">
        <item name="normalbackground">@drawable/anniu_buzhongyao</item>
        <item name="pressedbackground">@drawable/anniu_changtai</item>
        <item name="normaltextcolor">@color/login_phone_click</item>
        <item name="pressedtextcolor">@color/main_background_color</item>
    </style>

    <style name="useragreeementbutton">
        <item name="pressedbackground">@drawable/anniu_buzhongyao</item>
        <item name="normalbackground">@drawable/anniu_changtai</item>
        <item name="pressedtextcolor">@color/login_phone_click</item>
        <item name="normaltextcolor">@color/main_background_color</item>
    </style>

    <style name="customesmallrectbutton">
        <item name="normalbackground">@drawable/dialog_small_normal</item>
        <item name="pressedbackground">@drawable/dialog_small_pressed</item>
        <item name="normaltextcolor">@color/login_phone_click</item>
        <item name="pressedtextcolor">@color/main_background_color</item>
    </style>

    <style name="AnimationTopFade">
        <item name="android:windowEnterAnimation">@anim/dropdown_in</item>
        <item name="android:windowExitAnimation">@anim/dropdown_out</item>
    </style>

    <!--<style name="AnimationTopFade">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
    </style>-->



    <style name="XSpinnerStyle" parent="android:Widget.ListView.DropDown">
        <!-- 分隔线颜色 -->
        <item name="android:divider">#DFDFDF</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <!-- Base application theme. -->
    <style name="SpinnerAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:dropDownListViewStyle">@style/XSpinnerStyle</item>

    </style>

    <style name="spinner_style" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_raow_selector</item>
        <item name="android:theme">@style/Theme.AppCompat.Light.NoActionBar</item>
    </style>

    <style name="trainmode_spinner_style" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/trainmode_spinner_raow_selector</item>
        <item name="android:theme">@style/Theme.AppCompat.Light.NoActionBar</item>
    </style>

    <style name="sexspinner_style" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:background">@drawable/spinner_raow_selector</item>
    </style>

    <style name="common_spinner" >
        <!--设置弹窗背景为 系统设置的 应用主色调 在application 的colorPrimay 中配置的颜色, actionBar toolbar 默认使用这个为背景颜色-->
        <!--<item name="android:popupBackground">?attr/colorPrimary</item>-->
        <item name="android:background">@drawable/spinner_raow_selector</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--设置 spinner 显示位置往下偏移 actionBarSize 的高度, 默认显示是直接显示在 Spinner 的选中项的上方-->
        <!--<item name="android:dropDownVerticalOffset">0dp</item>-->
        <!--设置选中之后Item 的背景变换 设置背景为 灰色背景色-->
        <!--<item name="android:dropDownSelector">@color/top_unsignin_text_color</item>-->
        <!--设置下拉框的 list 的样式, 主要是设置 分割线, 当然也可以设置下拉的 list 的背景颜色-->
        <item name="android:dropDownListViewStyle">@style/spinnerListStyle</item>
        <!--设置显示在 popup 中 item(TextView) 的样式-->
        <item name="android:dropDownItemStyle">@style/itemSpinnerStyle</item>
    </style>

    <!--设置分割线-->
    <style name="spinnerListStyle" parent="@android:style/Widget.ListView.DropDown">
        <item name="android:divider">#fff</item>
        <item name="android:dividerHeight">1dp</item>
    </style>


    <!--设置文本颜色 和大小-->
    <style name="itemSpinnerStyle" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/time_selected_text_color</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="eyestatus" parent="@android:style/Widget.CompoundButton.RadioButton">
       <!-- <item name="android:background">@android:drawable/btn_radio_label_background</item>-->
        <!--<item name="android:button">@drawable/eyestatus_radiobutton_selector</item>-->
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:button">@null</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@null</item>
        <item name="android:drawableLeft">@drawable/eyestatus_radiobutton_selector</item>
        <item name="android:drawablePadding">10dp</item>
     </style>

    <style name="protolstatus" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@null</item>
        <item name="android:drawableLeft">@drawable/protolstatus_radiobutton_selector</item>
        <item name="android:drawablePadding">0dp</item>
    </style>

    <style name="select_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:paddingTop">4dip</item>
        <item name="android:paddingBottom">4dip</item>
        <item name="android:background">@drawable/select_selector</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@drawable/txt_select_selector</item>
    </style>

    <style name="custom_data_select_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:paddingTop">4dip</item>
        <item name="android:paddingBottom">4dip</item>
        <item name="android:background">@drawable/custom_data_select_selector</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@drawable/txt_select_selector</item>
    </style>

    <style name="CircleImageView" >
        <item name="border_width">0dp</item>
        <item name="border_color">@color/main_background_color</item>
    </style>

    <style name="NumberProgressBar_Customer">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>

        <item name="progress_max">100</item>
        <item name="progress_current">0</item>

        <item name="progress_unreached_color">#CCCCCC</item>
        <item name="progress_reached_color">@color/bleglasses_main_top_bg_color</item>

        <item name="progress_text_size">14dp</item>
        <item name="progress_text_color">@color/bleglasses_main_top_bg_color</item>

        <item name="progress_reached_bar_height">3dp</item>
        <item name="progress_unreached_bar_height">2dp</item>
    </style>

    <style name="customHoloLight" parent="Theme.AppCompat.Light.Dialog.Alert">

    </style>

    <declare-styleable name="BatteryViewAttr">

        <attr name="batterlevel" format="integer"></attr>
        <attr name="battery_left" format="dimension"></attr>
        <attr name="battery_top" format="dimension"></attr>

        <attr name="battery_width" format="dimension"></attr>
        <attr name="battery_height" format="dimension"></attr>

        <attr name="battery_head_height" format="dimension"></attr>
        <attr name="battery_head_width" format="dimension"></attr>
        <attr name="battery_inside_margin" format="dimension"></attr>

        <attr name="outer_rect_color" format="color|reference"></attr>
        <attr name="outer_rect_line_width" format="dimension"></attr>

        <attr name="inner_rect_color" format="color|reference"></attr>

    </declare-styleable>

    <style name="lineStyle10">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/assit_all_edit_background_color</item>
        <item name="android:layout_height">@dimen/dp_10</item>
    </style>

    <style name="MatchMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--SplashActivity Theme-->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>  <!-- 透明背景 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--<item name="android:windowBackground">@drawable/bg</item>-->
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
