<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bleglasses_main_bg_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/qidongtubiao"
                android:visibility="visible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_slogan"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/toolbar_title_text_color"
                ></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <EditText
                        android:id="@+id/usernameedittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableLeft="@mipmap/ic_regist_phone"
                        android:drawablePadding="15dp"
                        android:hint="请输入您的账户"
                        android:inputType="text"
                        android:maxLines="1"
                        android:maxLength="32"
                        android:paddingLeft="10dp"
                        android:textColor="@color/time_selected_text_color"
                        android:textColorHint="@color/passwd_unline_text_color"
                        android:textSize="@dimen/register_input_phone_text_size"
                        android:textCursorDrawable="@drawable/cursor_color"/>

                </LinearLayout>

                <View
                    android:id="@+id/usernameunderline"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/bleglasses_register_divide_line_color" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <EditText
                        android:id="@+id/passwordedittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableLeft="@mipmap/ic_regist_pwd"
                        android:drawablePadding="15dp"
                        android:hint="请输入您的密码"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:maxLength="32"
                        android:paddingLeft="10dp"
                        android:textColor="@color/time_selected_text_color"
                        android:textColorHint="@color/passwd_unline_text_color"
                        android:textSize="@dimen/register_input_phone_text_size"
                        android:textCursorDrawable="@drawable/cursor_color"/>

                </LinearLayout>

                <View
                    android:id="@+id/passwdunderlineview"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/bleglasses_register_divide_line_color" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2.5"
            android:gravity="center_horizontal|top"
            android:orientation="vertical">

            <Button
                android:id="@+id/loginbutton"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/res_round_blue_4"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:clickable="false"
                android:text="登录"
                android:textColor="@color/top_unsignin_text_color"
                android:textSize="@dimen/login_with_register_text_size" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/forgetpasswd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="40dp"
                    android:text="@string/forget_passwd_text"
                    android:textColor="@color/login_forget_passswd_tip_textcolor"
                    android:textSize="@dimen/account_with_passwd_login_text_size" />

            </LinearLayout>


            <Button
                android:id="@+id/registerbutton"
                android:layout_marginLeft="40dp"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/res_round_blue_4"
                android:layout_marginTop="13dp"
                android:layout_marginRight="40dp"
                android:clickable="false"
                android:text="注册"
                android:textColor="@color/top_unsignin_text_color"
                android:textSize="@dimen/login_with_register_text_size" />


            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_login_1"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/toolbar_title_text_color"
                    ></TextView>
                <TextView
                    android:id="@+id/tv_login_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_login_2"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/colorPridmary"
                    android:layout_marginLeft="5dp"
                    ></TextView>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>