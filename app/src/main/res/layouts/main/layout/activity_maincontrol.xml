<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bleglasses_main_bg_color"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/trainlayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/main_item_selector"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/trainimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_main_false"/>

            <TextView
                android:id="@+id/traintext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="训练"
                android:textColor="@color/unclickable_text_color"
                android:textSize="@dimen/confirm_connect_text_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/reportformslayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/main_item_selector"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/reportformsimageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_statement_false" />

            <TextView
                android:id="@+id/reportformstextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="报表"
                android:textColor="@color/unclickable_text_color"
                android:textSize="@dimen/confirm_connect_text_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/signinlayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/main_item_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/signinimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/gongnneg" />

            <TextView
                android:id="@+id/signintext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="功能"
                android:textColor="@color/unclickable_text_color"
                android:textSize="@dimen/confirm_connect_text_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/minelayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/main_item_selector"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mineimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_mine_false" />

            <TextView
                android:id="@+id/minetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="我的"
                android:textColor="@color/unclickable_text_color"
                android:textSize="@dimen/confirm_connect_text_size" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>