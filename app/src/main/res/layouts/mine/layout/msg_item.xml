<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/left_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_marginRight="80dp"
        android:minHeight="30dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/fromimage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="top"
            android:layout_marginRight="5dp"
            android:background="@drawable/portrait_circle_shape" />

        <TextView
            android:id="@+id/left_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/fromimage"
            android:layout_gravity="left"
            android:layout_toRightOf="@id/fromimage"
            android:background="@drawable/receive_oval_circle_shape"
            android:lineSpacingExtra="2dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:text=""
            android:textColor="@color/toolbar_title_text_color"
            android:textSize="@dimen/contact_customer_service_msg_text_size" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="80dp"
        android:minHeight="30dp">

        <TextView
            android:id="@+id/right_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/selfimage"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/selfimage"
            android:background="@drawable/send_oval_circle_shape"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:lineSpacingExtra="2dp"
            android:text=""
            android:textColor="@color/main_background_color"
            android:textSize="@dimen/contact_customer_service_msg_text_size" />

        <ImageView
            android:id="@id/selfimage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="top"
            android:background="@drawable/portrait_circle_shape" />

    </RelativeLayout>

</LinearLayout>