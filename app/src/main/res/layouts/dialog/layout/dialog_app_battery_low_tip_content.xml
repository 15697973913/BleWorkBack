<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg_shape"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提示"
            android:textColor="@color/train_status_disconnect_text_color"
            android:textSize="18dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_weight="1"
            android:id="@+id/showcurrrentusercodetv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/battery_low_tip_stop_glasses_text"
            android:textColor="@color/time_selected_text_color"
            android:maxLines="4"
            android:autoSizeMaxTextSize="16dp"
            android:autoSizeTextType="uniform"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/batterylowstopbtn"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/res_round_blue_4"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="停止运行"
            android:textColor="@color/bleglasses_main_bg_color"
            android:textSize="14dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/batterylowcancelbtn"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/res_round_blue_4"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="取消"
            android:textColor="@color/bleglasses_main_bg_color"
            android:textSize="14dp" />

    </LinearLayout>


</LinearLayout>